{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/books/search",
            "dest": "/api/books/search.js",
            "methods": [
                "GET",
                "OPTIONS"
            ]
        },
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/((?!api/.*).*)",
            "dest": "/index.html"
        }
    ],
    "functions": {
        "api/**/*.js": {
            "runtime": "edge"
        }
    }
}